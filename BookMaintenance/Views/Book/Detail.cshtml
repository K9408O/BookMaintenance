@model BookMaintenance.Models.ViewModel.BookEditViewModel

@{
    ViewData["Title"] = "書籍明細";
}

<h3>書籍明細</h3>

<table class="table table-bordered">
    <colgroup>
        <col style="width: 20%">
        <col style="width: 80%">
    </colgroup>
    <tr>
        <th>書名</th>
        <td>@Model.Book_Name</td>
    </tr>
    <tr>
        <th>作者</th>
        <td>@Model.Book_Author</td>
    </tr>
    <tr>
        <th>出版社</th>
        <td>@Model.Book_Publisher</td>
    </tr>
    <tr>
        <th>內容簡介</th>
        <td>@Model.Book_Note</td>
    </tr>
    <tr>
        <th>購書日期</th>
        <td>@(Model.Book_Bought_Date?.ToString("yyyy/MM/dd")??"")</td>
    </tr>
    <tr>
        <th>圖書類別</th>
        <td>
            @(Model.BookClasses.FirstOrDefault(c => c.Value == Model.Book_Class_Id)?.Text ?? "")
        </td>
    </tr>
    <tr>
        <th>借閱狀態</th>
        <td>
            @(Model.Statuses.FirstOrDefault(s => s.Value == Model.Book_Status)?.Text ?? "")
        </td>
    </tr>
    <tr>
        <th>借閱人</th>
        <td>
            @(Model.Borrowers.FirstOrDefault(b => b.Value == Model.Book_Keeper)?.Text ?? "無")
        </td>
    </tr>
</table>

<a class="btn btn-secondary" href="@Url.Action("Index")">返回列表</a>
